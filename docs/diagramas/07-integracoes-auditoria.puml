@startuml

title FokusLead - Integracoes Externas e Auditoria

class Integracao {
  +id: UUID
  +tipo: IntegracaoTipo
  +status: string
  +token: string
  +ultimaSincronizacao: datetime
}

enum IntegracaoTipo {
  WHATSAPP
  INSTAGRAM
}

class LogAcesso {
  +id: UUID
  +dataHora: datetime
  +acao: string
  +ip: string
}

class Lead <<ref>>
class Interacao <<ref>>
class Usuario <<ref>>

Integracao "1" -- "0..*" Lead
Integracao "1" -- "0..*" Interacao
Usuario "1" -- "0..*" LogAcesso

@enduml
